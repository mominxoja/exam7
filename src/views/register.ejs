<body>
    register
    <form action="/api/register" method="post" enctype="multipart/form-data">
        <input type="text" placeholder="ism" name="ism">
        <input type="text" placeholder="username"username">
        <input type="password" placeholder="password" name="password">
        <input type="file" id="uploader" placeholder="your image" name="image">
        <canvas id="canvas"></canvas>
        
        <p>acountingiz bo'lsa <a href="./login">Login</a>ga o'ting</p>

        <input type="submit" value="submit">
    </form>

    <script>
              const canvas = document.getElementById("canvas");

const ctx = canvas.getContext("2d");

const reader = new FileReader();
const img = new Image();

const uploadImage = (e) => {
  reader.onload = () => {
    img.onload = () => {
      canvas.width = img.width;
      canvas.height = img.height;
      ctx.drawImage(img, 0, 0);
    };
    img.src = reader.result;
  };
  reader.readAsDataURL(e.target.files[0]);
};

const imageLoader = document.getElementById("uploader");
imageLoader.addEventListener("change", uploadImage);


    </script>
</body>
